{
  "name": "crosspacket-typescript-tests",
  "version": "1.0.0",
  "description": "CrossPacket TypeScript comprehensive tests",
  "scripts": {
    "test": "jest",
    "test:comprehensive": "npx ts-node test_comprehensive.ts",
    "test:coverage": "cd ../../output/typescript && npx c8 --include='*.ts' --reporter=text npx ts-node ../../tests/typescript/test_full_coverage.ts",
    "test:json": "TEST_MODE=JSON_ONLY jest",
    "test:msgpack": "TEST_MODE=MSGPACK_ONLY jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "c8": "^10.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.0.0-beta2"
  }
}
