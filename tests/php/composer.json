{
    "name": "crosspacket/tests",
    "description": "CrossPacket PHP Test Suite",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpunit/php-code-coverage": "^10.0",
        "nikic/php-parser": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\DataPackets\\": "../../generated/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CrossPacket\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "coverage": "phpunit --coverage-text --coverage-html coverage"
    }
}
